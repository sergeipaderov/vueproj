@import 'system'

.index
  text-align center
  margin -8px
  background:  linear-gradient(to bottom,#8C95AA,#fff)

  img
    padding 100px 0 0
    width 280px
    height 280px
    color #8C95AA

  .input
    width 150px
    margin auto

  a
    color #000000
    text-decoration none
    font-family Geneva, Arial, Helvetica, sans-serif
    h3
      font-size 2em
      font-weight 600
      margin-top .8em
      letter-spacing: 1.6px
  a:hover
    color primary_color
